---
import Base from '../layouts/Base.astro';
import games from '../data/games.json';
---

<Base title="Math Fun for Kids!">
    <div class="container">
        <h1>🧮 Math Fun for Kids! 🎉</h1>
        <p class="subtitle">Choose your math adventure!</p>

        <div class="content-wrapper">
            <div class="main-content">
                <div class="exercise-grid">
                    {games.map((game) => (
                        <a href={game.url} class="exercise-card">
                            <h2>{game.emoji} {game.title}</h2>
                            <p>{game.description}</p>
                            <span class="btn">{game.buttonText}</span>
                        </a>
                    ))}
                </div>
            </div>

            <div class="sidebar">
                <div class="donation-appeal">
                    <h3>🇵🇸 Help Children in Gaza</h3>
                    <p>Children in Gaza need our support. Your donation can provide education, healthcare, and essential supplies.</p>
                    <div class="donation-buttons">
                        <a href="https://www.unicef.org.uk/donate/children-in-gaza-crisis-appeal" target="_blank" rel="noopener" class="donation-btn unicef-btn">
                            <span class="btn-icon">🦄</span>
                            <span class="btn-text">UNICEF Appeal</span>
                        </a>
                        <a href="https://donate.redcross.org.uk/appeal/gaza-crisis-appeal" target="_blank" rel="noopener" class="donation-btn redcross-btn">
                            <span class="btn-icon">❤️</span>
                            <span class="btn-text">Red Cross Appeal</span>
                        </a>
                        <a href="https://msf.org.uk/issues/gaza-genocide" target="_blank" rel="noopener" class="donation-btn msf-btn">
                            <span class="btn-icon">🏥</span>
                            <span class="btn-text">MSF Appeal</span>
                        </a>
                        <a href="https://www.savethechildren.org.uk/how-you-can-help/emergencies/gaza-crisis" target="_blank" rel="noopener" class="donation-btn savechildren-btn">
                            <span class="btn-icon">🛡️</span>
                            <span class="btn-text">Save the Children</span>
                        </a>
                        <a href="https://www.dec.org.uk/appeal/middle-east-humanitarian-appeal" target="_blank" rel="noopener" class="donation-btn dec-btn">
                            <span class="btn-icon">🤝</span>
                            <span class="btn-text">DEC Appeal</span>
                        </a>
                        <a href="https://www.islamic-relief.org.uk/giving/appeals/palestine/gaza/" target="_blank" rel="noopener" class="donation-btn islamic-relief-btn">
                            <span class="btn-icon">🌙</span>
                            <span class="btn-text">Islamic Relief</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Base>
