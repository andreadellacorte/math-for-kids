{
  "name": "math-for-kids",
  "version": "1.0.0",
  "description": "Interactive math learning games for kids",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npm run build:bundles && npm run build:types",
    "build:bundles": "node build.js",
    "build:prod": "node build.js --production",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "build:watch": "node build.js --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "math",
    "education",
    "kids",
    "games"
  ],
  "author": "Andrea Della Corte",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.2",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.25.10",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "js/**/*.{ts,tsx}",
      "!js/games/**",
      "!js/**/*.test.{ts,tsx}",
      "!coverage/**",
      "!dist/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.{ts,tsx}",
      "**/*.test.{ts,tsx}"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
